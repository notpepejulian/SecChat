---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Generador de Llaves - ChatSender">
  <div class="fixed inset-0 bg-black overflow-hidden -z-10">
    <div class="absolute top-0 left-0 w-96 h-96 bg-purple-600/30 rounded-full blur-3xl opacity-40"></div>
    <div class="absolute bottom-0 right-0 w-[600px] h-[600px] bg-purple-800/20 rounded-full blur-3xl opacity-30"></div>
    <div class="absolute top-20 left-20 w-32 h-32 bg-purple-500/40 rounded-full blur-2xl animate-float"></div>
    <div class="absolute bottom-32 right-1/4 w-24 h-24 bg-purple-600/40 rounded-full blur-xl animate-float" style="animation-delay: 2s"></div>
  </div>

  <main class="relative min-h-screen flex items-center justify-center p-4">
    <div class="w-full max-w-2xl animate-fade-in-up">
      <div class="text-center mb-10">
        <h1 class="text-7xl font-black text-white tracking-tight">
          Generador de <span class="text-purple-500">Llaves</span>
        </h1>
        <p class="text-purple-200/50 text-l mt-2">Genera un par de llaves criptográficas seguras</p>
      </div>

      <div class="relative bg-purple-900/10 backdrop-blur-xl border border-purple-500/20 rounded-3xl p-8 shadow-[0_0_50px_rgba(0,0,0,0.5)] overflow-hidden">
        <div class="absolute top-0 left-0 right-0 h-[1px] bg-gradient-to-r from-transparent via-purple-500/50 to-transparent"></div>

        <form id="keygenForm" class="relative space-y-6">
          <button
            type="submit"
            id="generateButton"
            class="group relative w-full bg-gradient-to-r from-purple-700 to-purple-900 hover:from-purple-600 hover:to-purple-800 text-white font-bold py-4 px-6 rounded-xl transition-all duration-300 transform hover:scale-[1.02] hover:shadow-[0_0_20px_rgba(147,51,234,0.3)] overflow-hidden border border-purple-500/20"
          >
            <span class="absolute inset-0 bg-white/10 opacity-0 group-hover:opacity-100 transition-opacity"></span>
            <div class="flex items-center justify-center gap-2">
              <span id="buttonText">Generar Llaves</span>
              <svg id="loadingIcon" class="w-5 h-5 animate-spin hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </div>
          </button>
        </form>

        <div id="resultContainer" class="hidden mt-8 bg-black/40 border border-purple-500/20 rounded-xl p-6"> </div>

        <div class="mt-8 pt-6 border-t border-purple-500/10 flex justify-between items-center text-m">
          <a href="/" class="text-purple-400/60 hover:text-white transition-colors">← Volver al inicio</a>
          <a href="/login" class="text-purple-400/60 hover:text-white transition-colors">Ir a Login</a>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  const form = document.getElementById("keygenForm");
  const generateButton = document.getElementById("generateButton");
  const buttonText = document.getElementById("buttonText");
  const loadingIcon = document.getElementById("loadingIcon");
  const resultContainer = document.getElementById("resultContainer");

  async function generateKeysOnBackend() {
    const res = await fetch("/api/keys/generate", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ count: 1 })
    });
    return res.json();
  }

  window.copyToClipboard = async (text, button) => {
    try {
      await navigator.clipboard.writeText(text);
      const originalHTML = button.innerHTML;
      button.innerHTML = `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>`;
      button.classList.add("text-green-400");
      setTimeout(() => {
        button.innerHTML = originalHTML;
        button.classList.remove("text-green-400");
      }, 2000);
    } catch (err) {
      console.error("Error al copiar:", err);
    }
  };

  form.addEventListener("submit", async (e) => {
    e.preventDefault();

    generateButton.disabled = true;
    buttonText.textContent = "Generando...";
    loadingIcon.classList.remove("hidden");

    try {
      const data = await generateKeysOnBackend();
      resultContainer.classList.remove("hidden");
      
      const key = data.keys[0];
      resultContainer.innerHTML = `
        <div class="p-4 bg-black/30 rounded-xl border border-purple-500/20">
          <div class="relative">
            <p class="text-purple-400 text-m font-mono mb-2">Llave Pública:</p>
            <button onclick="copyToClipboard('${key.public_key.replace(/'/g, "\\'")}', this)" class="absolute top-0 right-0 p-1.5 text-purple-400 hover:text-purple-200 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
            </button>
            <pre class="text-purple-200 text-xs whitespace-pre-wrap pr-8">${key.public_key}</pre>
          </div>
          <div class="relative mt-4">
            <p class="text-purple-400 text-m font-mono mb-2">Llave Privada:</p>
            <button onclick="copyToClipboard('${key.private_key.replace(/'/g, "\\'")}', this)" class="absolute top-0 right-0 p-1.5 text-purple-400 hover:text-purple-200 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
            </button>
            <pre class="text-purple-200 text-xs whitespace-pre-wrap pr-8">${key.private_key}</pre>
          </div>
        </div>
      `;
    } catch {
      resultContainer.classList.remove("hidden");
      resultContainer.innerHTML = "<p class='text-red-400'>Error al generar llaves.</p>";
    }

    generateButton.disabled = false;
    buttonText.textContent = "Generar Llaves";
    loadingIcon.classList.add("hidden");
  });
</script>

<style>
  @keyframes float { 0%,100%{transform:translateY(0)} 50%{transform:translateY(-10px)} }
  @keyframes fadeInUp { from{opacity:0;transform:translateY(20px)} to{opacity:1;transform:translateY(0)} }
  .animate-float{animation:float 6s ease-in-out infinite}
  .animate-fade-in-up{animation:fadeInUp .6s cubic-bezier(.2,.8,.2,1) forwards}
</style>
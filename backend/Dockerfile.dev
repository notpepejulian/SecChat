# trivy:ignore:AVD-DS-0002
FROM python:3.11-slim

WORKDIR /app

# Instalar dependencias del sistema
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    default-libmysqlclient-dev \
    pkg-config \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copiar e instalar dependencias
COPY requirements.txt .
RUN pip install --upgrade pip
RUN pip install --no-cache-dir -r requirements.txt

# NOTA: En desarrollo, ejecutamos como root para evitar conflictos de permisos
# con volúmenes montados y SELinux (:Z). Para producción, descomentar las líneas
# del usuario no privilegiado y NO montar volúmenes de código.

# Usuario python para ejecutar la app (descomentado para producción)
# RUN groupadd -r python && useradd --no-log-init -r -g python python
# USER python

# Copiar código fuente
COPY . .

# Exponer puerto
EXPOSE 8000

# Comando para ejecutar la aplicación
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
